<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp"
        app:strokeWidth="2dp"
        android:layout_marginBottom="20dp"
        app:strokeColor="@color/blue"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="15dp"
            android:layout_marginVertical="15dp">

            <TextView
                android:id="@+id/item_class_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LA03"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/item_class_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Mobile Multimedia Solutions"
                android:textSize="16sp"
                android:layout_marginBottom="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_clock"
                    android:layout_marginEnd="3dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="Time Icon" />

                <TextView
                    android:id="@+id/item_class_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="07:20 AM"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_location"
                    android:layout_marginEnd="3dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="Location Icon" />

                <TextView
                    android:id="@+id/item_class_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Anggrek Campus"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>